@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="col-md-4 offset-md-4">
    <h1>@ViewData["Title"]</h1>
</div>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" value="P@55w0rd1" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <button type="submit" asp-page-handler="SendVerificationEmail" class="btn-link" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        @if (Model.JobOwnerUsernames == null) { <p> Loading Users....</p>}
        <fieldset>
            <legend>Job Owners</legend>
            @foreach(var username in Model.JobOwnerUsernames){
                <p>@username</p>
            }
        </fieldset>
        <fieldset>
            <legend>Job Seekers</legend>
            @foreach(var username in Model.JobSeekerUsernames){
                <p>@username</p>
            }
        </fieldset>
        <fieldset>
            <legend>Admins</legend>
            @foreach(var username in Model.AdminUsernames){
                <p>@username</p>
            }
        </fieldset>
        <p>P@55w0rd1</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    fieldset {
        border: 1px solid darkgray;
        padding-left: 10px;
    }
    legend{
        width:auto;
    }

</style>