@model JobWebsiteMVC.ViewModels.Home.Overview

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Active Jobs</legend>
                <p>@Model.ActiveJobCount</p>
            </fieldset>
        </div>
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Draft Jobs</legend>
                <p>@Model.DraftJobs</p>
            </fieldset>
        </div>
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Future Jobs</legend>
                <p>@Model.FutureJobs</p>
            </fieldset>
        </div>
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Closed Jobs</legend>
                <p>@Model.ClosedJobs</p>
            </fieldset>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Users</legend>
                <p>@Model.UserCount</p>
            </fieldset>
        </div>
        <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Job Seekers</legend>
                <p>@Model.JobSeekingUserCount</p>
            </fieldset>
        </div>
                <div class="col-md-3">
            <fieldset class="border p-2">
                <legend>Employers</legend>
                <p>@Model.EmployerCount</p>
            </fieldset>
        </div>
    </div>

    

    





    

</div>
