@model JobWebsiteMVC.Models.Job.Job

@{
    ViewData["Title"] = "JobApplication";
}

<h1>JobApplication</h1>

<div>
    <h4>Job</h4>
    <p>Are you sure you want to apply for job @Model.JobTitle?</p>
    <form asp-action="JobApply" method="post" asp-route-jobId="@Model.Id">
        <input type="hidden" name="name" value=@Model.Id />
        <input type="submit" class="btn btn-success" title="Yes!" />
    </form>
</div>
<div>
    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("JobOwner")))
    {
        <a asp-action="Edit" class="btn btn-info" asp-route-id="@Model.Id">Edit</a>
    }
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>