@model JobWebsiteMVC.Models.Job.Job

@{
    ViewData["Title"] = "JobApplication";
}

<h1>JobApplication</h1>

<div>
    <h4>Job</h4>
    <p>Are you sure you want to apply for job @Model.Title?</p>
    <form asp-action="JobApply" method="post" asp-route-jobId="@Model.Id">
        <input type="hidden" name="name" value=@Model.Id />
        <input type="submit" title="Yes!" />
    </form>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>